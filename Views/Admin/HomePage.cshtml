        }

    .vertical-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .vertical-list li {
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f8f8f8;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

            .vertical-list li h3 {
                margin-top: 0;
            }

            .vertical-list li p {
                margin: 0;
                flex-grow: 1;
            }

            .vertical-list li:last-child {
                margin-bottom: 0;
            }
//Card Styling
